<h1><%= @wiki.title %></h1>
<small>
  submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.name %>
  <br/>
  <em>This wiki is <strong><%= @wiki.private ? "private" : "public" %></strong></em>
</small>
<br/>
<br/>

<%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
<% if is_admin? %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
<% end %>
<br/>
<br/>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @wiki.body %></p>
  </div>
  <div class="col-md-4">
    <% if current_user %>
      <%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
